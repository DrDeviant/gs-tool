#!/bin/bash

scan='1'
for i in {1..999999}
do
ping -c 1 192.168.1.$scan &>/dev/null

if [ $? -eq 0 ]
then
echo 
echo -e "\e[1;33m"---------------------------------------------------------------------- 
echo -e "\e[1;31m"192.168.1.$scan 
nslookup 192.168.1.$scan                                                                            
echo -e "\e[1;33m"---------------------------------------------------------------------- 
echo
fi
scan=$((scan+1))

done
