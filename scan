#!/bin/bash

scan='1'
for i in {1..999999}
do
ping -c 1 192.168.1.$scan &>/dev/null

if [ $? -eq 0 ]
then
echo
echo ------------------------------------------------------------------------------------------------
echo 192.168.1.$scan
nslookup 192.168.1.$scan                                                                            
echo ------------------------------------------------------------------------------------------------
echo
fi
scan=$((scan+1))

done
